<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity" android:background="@drawable/third">
    <Button
            android:text="ADDITION"
            android:layout_width="250dp"
            android:layout_height="75dp" android:id="@+id/buttonadd" android:layout_marginTop="75dp"
            android:layout_gravity="center_horizontal" android:textSize="20sp"/>
    <Button
            android:text="SUBTRACTION"
            android:layout_width="250dp"
            android:layout_height="75dp" android:id="@+id/buttonsub" android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" android:textSize="20sp"/>
    <Button
            android:text="MULTIPLICATION"
            android:layout_width="250dp"
            android:layout_height="75dp" android:id="@+id/buttonmul" android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" android:textSize="20sp"/>
</LinearLayout>